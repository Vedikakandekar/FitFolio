<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:elevation="40dp"
        android:padding="40sp"
        app:cardBackgroundColor="#B6AD90"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/TVrtype"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Type"
                    android:textColor="@color/black"
                    android:textSize="17sp">

                </TextView>

                <TextView
                    android:id="@+id/TVrqty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Qty"
                    android:textColor="@color/black"
                    android:textSize="17sp">

                </TextView>

                <TextView
                    android:id="@+id/TVrrate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:text="Rate"
                    android:textSize="17sp">

                </TextView>

                <TextView
                    android:id="@+id/TVramt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="Amt"
                    android:textColor="@color/black"
                    android:textSize="17sp">

                </TextView>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgbtndel"
                    android:src="@drawable/del"
                    >

                </ImageButton>


            </LinearLayout>

            <TextView
                android:id="@+id/TVrmeasurenments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableEnd="@drawable/arrow_down"
                android:padding="5dp"
                android:text="Measurenments"
                android:textSize="17sp">

            </TextView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardmeasure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/TVrM1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="M1"
                            android:padding="5dp"
                            android:textFontWeight="1"
                            android:textSize="25sp">

                        </TextView>


                        <TextView
                            android:id="@+id/TVrM2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="M2"
                            android:padding="5dp"
                            android:textFontWeight="1"
                            android:textSize="25sp">

                        </TextView>


                        <TextView
                            android:id="@+id/TVrM3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="M3"
                            android:padding="5dp"
                            android:textFontWeight="1"
                            android:textSize="25sp">

                        </TextView>


                        <TextView
                            android:id="@+id/TVrM4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="M4"
                            android:padding="5dp"
                            android:textFontWeight="1"
                            android:textSize="25sp">

                        </TextView>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/TVrM5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="M5"
                            android:padding="5dp"
                            android:textFontWeight="1"
                            android:textSize="25sp">

                        </TextView>


                        <TextView
                            android:id="@+id/TVrM6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="M6"
                            android:padding="5dp"
                            android:textFontWeight="1"
                            android:textSize="25sp">

                        </TextView>


                        <TextView
                            android:id="@+id/TVrM7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="M7"
                            android:padding="5dp"
                            android:textFontWeight="1"
                            android:textSize="25sp">

                        </TextView>


                        <TextView
                            android:id="@+id/TVrM8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="M8"
                            android:padding="5dp"
                            android:textFontWeight="1"
                            android:textSize="25sp">

                        </TextView>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/TVrM9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="M9"
                            android:padding="5dp"
                            android:textFontWeight="1"
                            android:textSize="25sp">

                        </TextView>


                        <TextView
                            android:id="@+id/TVrM10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="M10"
                            android:padding="5dp"
                            android:textFontWeight="1"
                            android:textSize="25sp">

                        </TextView>


                        <TextView
                            android:id="@+id/TVrM11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="M11"
                            android:padding="5dp"
                            android:textFontWeight="1"
                            android:textSize="25sp">

                        </TextView>


                        <TextView
                            android:id="@+id/TVrM12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="M12"
                            android:padding="5dp"
                            android:textFontWeight="1"
                            android:textSize="25sp">

                        </TextView>


                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/TVrremarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Remarks"
                android:drawableEnd="@drawable/arrow_down"
                android:textSize="17sp">

            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardremarks"
                android:visibility="gone"
                >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                <ListView
                    android:id="@+id/rRemarkList"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                </ListView>


        </LinearLayout>

            </ScrollView>

    </androidx.cardview.widget.CardView>


</LinearLayout></androidx.cardview.widget.CardView>

    </LinearLayout>